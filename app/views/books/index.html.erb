<!docktype html>
<html lang = "ja">
  <head>

  </head>

  <body>
    <p id = "notice"></p>
    <h1>Books</h1>

<!--一覧画面---->
     <table>
       <thead>
         <colgrop span = "3"></colgrop>
          <tr>
           <th>Title</th>
           <th>Body</th>
           <th colspan = "3"></th>
        </tr>
      </thead>

    <% @books.each do |book| %>
      <tbody>
        <tr>
          <td><span><%= book.title %></span></td>

          <td><span><%= book.body %></span></td>

          <td><span><%= link_to 'Show', book_path(book.id) %></span></td>
        <% end %>
        </tr>
      </tbody>

    </table>


<!---投稿画面---->
    <h1>New Books</h1>

    <%= form_with model:@book, url: '/books', method: :post do |f| %>

    <h4>title</h4>
     <%= f.text_field :title %>

    <h4>body</h4>
     <%= f.text_area :body %>

     <%= f.submit 'Create Book' %>

    <% end %>

  </body>
</html>